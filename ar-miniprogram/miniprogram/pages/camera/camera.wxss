/* pages/camera/camera.wxss */
@import '../../components/style/common.wxss';
.main-container{
    background-color: rgba(0, 0, 0, 1);
    position: absolute;
    top: 0;
    bottom: 0;
    /* display: flex; */
    /* justify-content: center; */
    /* align-items: center; */
}
.camera-canvas-container {
    height: 1334rpx;
    width: 750rpx;
    position: relative;
}

.navi-back {
    position: fixed;
    top: 48rpx;
    left: 20rpx;
    z-index: 999;
    width: 60rpx;
    height: 60rpx;
}

.navi-back .icon-back {
    width: 60rpx;
    height: 60rpx;
}

.mask {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}
.sticker-container,
.filter-container,
.beauty-container,
.effect-container{
    position: absolute;
    bottom: 0;
}
.beauty-container{
    width: 100%;
    padding-top: 20rpx;
    background: rgb(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
    bottom: -999rpx;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}
.beauty-item{
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}
.beauty-name{
    color: #fff;
    flex: none; 
    padding: 0 20rpx
}
.beauty-slider{
    flex: auto
}